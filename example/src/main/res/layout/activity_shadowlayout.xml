<?xml version="1.0" encoding="utf-8"?>
<com.mosect.ashadow.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clipChildren="false"
    android:orientation="vertical">

    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="#ff0000"
        android:rotation="45"
        android:scaleX="0.5"
        android:scaleY="1.5"
        android:transformPivotX="50dp"
        android:transformPivotY="50dp"
        android:translationX="40dp"
        android:translationY="20dp"
        app:layout_roundRadius="10dp"
        app:layout_shadowColor="#ffff00"
        app:layout_shadowRadius="10dp"
        app:layout_shadowX="-5dp" />

    <View
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_bg"
        app:layout_roundRadiusLB="5dp"
        app:layout_roundRadiusLT="20dp"
        app:layout_roundRadiusRB="15dp"
        app:layout_roundRadiusRT="10dp"
        app:layout_shadowColor="#000000"
        app:layout_shadowRadius="10dp" />
</com.mosect.ashadow.ShadowLayout>